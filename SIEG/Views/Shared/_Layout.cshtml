<!DOCTYPE html>
<html lang="zh-Hant-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - S.I.E.G</title>

    <!-- Google Web Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@700&family=Open+Sans:wght@400;500;600&display=swap"
          rel="stylesheet">
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet" asp-append-version="true" />
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/responsive.css" rel="stylesheet" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)

</head>
<body>

    <!-- header -->
    <div class="header_sec sticky-top">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-5">
                    <a class="d-flex align-items-center header_logo" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="logo-image" class="img-fluid">
                    </a>
                </div>
                <div class="col-md-9 col-7 d-flex align-items-center justify-content-end">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
                             aria-labelledby="offcanvasNavbarLabel">
                            <div class="offcanvas-header">
                                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                                        aria-label="Close"></button>
                            </div>
                            <div class="offcanvas-body">
                                <div class="navbar-nav ms-auto">
                                    <a class="nav-item nav-link" asp-controller="Home" asp-action="About">關於我們</a>
                                    <div class="nav-item dropdown">
                                        <a class="nav-link" asp-controller="NewsList" asp-action="index">最新消息</a>
                                        <i class="bi bi-chevron-down dropdown-toggle" data-bs-toggle="dropdown"></i>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="NewsList" asp-action="index">品牌資訊</a>
                                            <a class="dropdown-item" asp-controller="NewsList" asp-action="index">獨家情報</a>
                                            <a class="dropdown-item" asp-controller="NewsList" asp-action="index">新品發佈</a>
                                        </div>
                                    </div>
                                    <div class="nav-item dropdown">
                                        <a class="nav-link" asp-controller="ProductList" asp-action="index">商品介紹</a>
                                        <i class="bi bi-chevron-down dropdown-toggle" data-bs-toggle="dropdown"></i>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="ProductList" asp-action="index">鞋子</a>
                                            <a class="dropdown-item" asp-controller="ProductList" asp-action="index">衣服</a>
                                            <a class="dropdown-item" asp-controller="ProductList" asp-action="index">包款</a>
                                            <a class="dropdown-item" asp-controller="ProductList" asp-action="index">手錶</a>
                                        </div>
                                    </div>
                                    <div class="nav-item dropdown">
                                        <a href="forum_list.html" class="nav-link">討論專區</a>
                                        <i class="bi bi-chevron-down dropdown-toggle" data-bs-toggle="dropdown"></i>
                                        <div class="dropdown-menu">
                                            <a href="forum_list.html" class="dropdown-item">高檔腕錶</a>
                                            <a href="forum_list.html" class="dropdown-item">潮流服飾</a>
                                            <a href="forum_list.html" class="dropdown-item">時尚包款</a>
                                            <a href="forum_list.html" class="dropdown-item">高檔鞋履</a>
                                        </div>
                                    </div>
                                    <a href="contact.html" class="nav-item nav-link">聯絡我們</a>
                                    <div class="nav-item dropdown d-block d-lg-none">
                                        <a href="signup.html" class="nav-link">會員中心</a>
                                        <i class="bi bi-chevron-down dropdown-toggle" data-bs-toggle="dropdown"></i>
                                        <div class="dropdown-menu">
                                            <a href="member.html" class="dropdown-item">KYC權限認證</a>
                                            <a href="order.html" class="dropdown-item">購買</a>
                                            <a href="sell.html" class="dropdown-item">出售</a>
                                            <a href="personal.html" class="dropdown-item">個人資料</a>
                                            <a href="notice.html" class="dropdown-item">通知中心</a>
                                            <a href="product_collect.html" class="dropdown-item">商品收藏</a>
                                            <a href="news_collect.html" class="dropdown-item">貼文收藏</a>
                                            <a href="setting.html" class="dropdown-item">設定</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <ul class="header_icon">
                            <li class="header_user">
                                <a href="signup.html">
                                    <img src="~/images/icon-user.png" alt="">
                                </a>
                            </li>
                            <li class="header_notice">
                                <a href="notice.html">
                                    <img src="~/images/icon-notice.png" alt="">
                                </a>
                                <span class="new_notice"></span>
                            </li>
                            <li class="header_search">
                                <a href="javascript:void(0)">
                                    <img src="~/images/icon-search.png" alt="">
                                </a>
                            </li>
                        </ul>
                        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
                                aria-controls="offcanvasNavbar">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </nav>
                </div>
            </div>
        </div>
        <!-- search form -->
        <div class="header_search_form">
            <form action="ProductList">
                <button type="button" class="fa fa-search" onclick="searchProsuct()"></button>
                <input type="text" name="search_content" placeholder="Search" class="searchInput">
            </form>
        </div>
    </div>


    <main role="main">
        @RenderBody()
    </main>


    @await RenderSectionAsync("footer", required: false)

    <!-- Top -->
    <a href="#" class="back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/parallax/parallax.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>

        function searchProsuct() {
            sessionStorage.setItem("keyword", $(".searchInput").val());
            window.location = "/ProductList";
        }

    </script>

</body>
</html>

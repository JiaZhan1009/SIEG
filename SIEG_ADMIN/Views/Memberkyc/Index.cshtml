<!-- 右邊內容 -->
<link href="~/css/BEN.css" rel="stylesheet">
<div class="content-wrapper">
	<div class="container-xxl flex-grow-1 container-p-y">

		<!-- 新增btn & 手機板選單 -->
		<h1>退貨申請</h1>
		<div class="top_nav justify-content-xl-end justify-content-between">
			<div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
				<a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
					<i class="bx bx-menu bx-sm"></i>
				</a>
			</div>
		</div>

		<!-- 顯示資訊 -->
		<div class="card" id="bannerVue">
			<div class="table-responsive text-nowrap">
				<table class="table banner_table">
					<thead>
						<tr>
							<th class="link">會員ID</th>
							<th class="title">會員權限</th>
							<th class="title">會員姓名</th>
							<th class="img">身分證正面</th>
							<th class="img">身分證反面</th>
						</tr>
					</thead>
					<tbody class="table-border-bottom-0">
						<tr v-for="item in MemberkycDTOes">
							@* <td class="imgTd-1" data-bs-toggle="modal" :data-bs-target="'#'+item.num" :id="item.orderId">*@
							<td>
								<div>{{item.memberId}}</div>
							</td>
							<td>
								<div>{{item.access}}</div>
							</td>
							<td>
								<div>{{item.name}}</div>
							</td>
							<td class="Memberkyc" data-bs-toggle="modal" :data-bs-target="'#'+item.num">
								<img :src="'https://localhost:7002'+item.idCardFront">
							</td>
							<td>
								<img :src="'https://localhost:7002'+item.idCardBack">
							</td>
							<td>
								<div class="tb_btn edit">
									<a>
										<i class="bx bx-badge-check" @@click="becomeaseller(item)"></i>
									</a>
								</div>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
		<!-- modal -->
		<div v-for="item in MemberkycDTOes">
			<div class="modal fade" :id="item.num" tabindex="-1" aria-labelledby="examplemodallabel" aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="examplemodallabel">照片細節</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
						</div>
						<div class="modal-body">							
							<div class="orderdetail">
								<span>身分證正面:</span>
								<img :src="'https://localhost:7002'+item.idCardFront">
							</div>
							<div class="orderdetail">
								<span>身分證反面:</span>
								<img :src="'https://localhost:7002'+item.idCardBack">
							</div>							
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">close</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.1.2/axios.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script>
		$(".back_memberkyc").addClass('active');
		var webApiBaseAddress = "https://localhost:7139";
		var appVue = new Vue({
			el: "#bannerVue",
			name: "bannerVue",
			data: {
				MemberkycDTOes: [],
				Filter: "",
				num: null,
			},
			mounted: function () {
				let _this = this;
				_this.getMemberkycDTOes();
			},
			methods: {
				getMemberkycDTOes: function () {
					let _this = this;
					axios.get(`${webApiBaseAddress}/api/B_personalinformation`).then(
						response => {
							_this.MemberkycDTOes = response.data;
							var MemberkycList = [];
							for (var i = 0; i < _this.MemberkycDTOes.length; i++) {
								var item = {};
								item = _this.MemberkycDTOes[i];
								item.num = "A" + item.memberId;
								MemberkycList.push(item);

							}
							_this.MemberkycDTOes = MemberkycList;
						}
					);
				},
				becomeaseller: function (item) {
					let _this = this;
					var request = {};
					request.MemberId = item.memberId;
					request.Access ="2";
					Swal.fire({
						title: '確認成為賣家?',
						icon: 'warning',
						showCancelButton: true,
						confirmButtonColor: '#3085d6',
						cancelButtonColor: '#d33',
					}).then((result) => {
						if (result.isConfirmed) {
							Swal.fire({
								icon: 'success',
								title: '會員' +item.name+'賣家',
								showConfirmButton: false,
								timer: 1500
							})
							axios.put(`${webApiBaseAddress}/api/B_personalinformation/MemberkycDTO/${item.memberId}`, request).then(
								response => {
									//alert(response.data);
									setTimeout(function () {
										_this.getMemberkycDTOes();
									}, 1500);
								}
							);
						}
					})				
				},
			},
		});

	</script>
}